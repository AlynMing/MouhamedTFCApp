<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCardActivity">

    <ImageView
        android:id="@+id/cancel_icon_toggle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="33dp"
        android:layout_toEndOf="@+id/personal_Q"
        android:src="@drawable/cancel_icon"
        tools:layout_editor_absoluteX="328dp"
        tools:layout_editor_absoluteY="455dp" />

    <EditText
        android:id="@+id/personal_Q"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        android:ems="10"
        android:hint="Enter the Question Here"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/personal_A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="155dp"
        android:ems="10"
        android:hint="Enter the Answer Here"
        android:inputType="textMultiLine" />

    <ImageView
        android:id="@+id/save_icon_toggle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/cancel_icon_toggle"
        android:layout_toStartOf="@+id/personal_Q"
        android:src="@drawable/save_icon" />

</RelativeLayout>